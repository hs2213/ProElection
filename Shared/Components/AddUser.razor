@using ProElection.Entities
<form class="@Class" @onsubmit="CreateUser">
    <h2 class="blue-text">@Label</h2>
    
    <ValidatedInput
        TEntity="User"
        Entity="_user"
        PropertyName="@nameof(User.Name)"
        ValidationContext="_userContext">
        <label>
            Name: <input type="text" @bind="_user.Name"/>
        </label>
    </ValidatedInput>
    
    <ValidatedInput
        TEntity="User"
        Entity="_user"
        PropertyName="@nameof(User.PhoneNumber)"
        ValidationContext="_userContext">
        <label>
            Number: <input type="text" @bind="_user.PhoneNumber"/>
        </label>
    </ValidatedInput>
    
    <ValidatedInput
        TEntity="User"
        Entity="_user"
        PropertyName="@nameof(User.Email)"
        ValidationContext="_userContext">
        <label>
            Email: <input type="email" @bind="_user.Email"/>
        </label>
    </ValidatedInput>
    
    <ValidatedInput
        TEntity="User"
        Entity="_user"
        PropertyName="@nameof(User.Address)"
        ValidationContext="_userContext">
        <label>
            Address: <input type="text" @bind="_user.Address"/>
        </label>
    </ValidatedInput>
    
    <ValidatedInput
        TEntity="User"
        Entity="_user"
        PropertyName="@nameof(User.Postcode)"
        ValidationContext="_userContext">
        <label>
            Postcode: <input type="text" @bind="_user.Postcode"/>
        </label>
    </ValidatedInput>
    
    <ValidatedInput
        TEntity="User"
        Entity="_user"
        PropertyName="@nameof(User.Country)"
        ValidationContext="_userContext">
        <label>
            Country: <input type="text" @bind="_user.Country"/>
        </label>
    </ValidatedInput>
    
    <ValidatedInput
        TEntity="User"
        Entity="_user"
        PropertyName="@nameof(User.HashedPassword)"
        ValidationContext="_userContext">
        <label>
            Password: <input type="password" @bind="_user.HashedPassword"/>
        </label>
    </ValidatedInput>
    
    <label class="blue-text">
        <input type="submit" value="@Label"/>
    </label>
</form>